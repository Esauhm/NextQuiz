<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerlayout"
    tools:context=".settingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar"/>

    </LinearLayout>


        <LinearLayout
            android:background="#494973"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="65dp"
            >

            <TextView
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Sobre Nosotros"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="36sp"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/nq"
                android:gravity="center"/>

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NextQuiz"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#EBE1F1"
                android:paddingTop="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="306dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:paddingTop="16dp"
                android:text="NextQuiz es un juego de preguntas
                diseñado para poner a prueba tus conocimientos
                y descubrir qué personaje eres. ¿Eres un genio de
                 la ciencia, un aventurero intrépido o un amante
                 del arte? Nuestro juego te brinda una experiencia
                 emocionante y educativa mientras te diviertes
                 respondiendo preguntas sobre diversos temas.
                    En NextQuiz, nos apasiona el aprendizaje interactivo y divertido. Nuestro objetivo es brindarte una experiencia de juego excepcional mientras expandes tus conocimientos y descubres aspectos interesantes sobre ti mismo. ¡Únete a la comunidad de NextQuiz y comienza la aventura de la exploración del conocimiento hoy mismo!"
                android:textColor="#EBE1F1"
                android:textSize="16sp" />



        </LinearLayout>



    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity = "start">

        <include
            layout="@layout/nav_drawer"/>

    </RelativeLayout>



</androidx.drawerlayout.widget.DrawerLayout>