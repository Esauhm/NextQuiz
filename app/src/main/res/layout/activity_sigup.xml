<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".sigupActivity">


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_marginTop="70dp"
            android:gravity="center"
            app:srcCompat="@drawable/img_registros" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:padding="15dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/sg_email"
                android:background="@drawable/forma_botones"
                android:layout_marginTop="30dp"
                android:hint="@string/et_correo"
                android:padding="8dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:autofillHints="email"
                android:inputType="textEmailAddress"
                android:drawableLeft="@drawable/email_logo"
                android:drawablePadding="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/sg_password"
                android:background="@drawable/forma_botones"
                android:layout_marginTop="30dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:padding="8dp"
                android:hint="@string/et_contrasenia"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/sg_confirm"
                android:background="@drawable/forma_botones"
                android:layout_marginTop="30dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:padding="8dp"
                android:inputType="textPassword"
                android:hint="@string/et_confirmar"
                android:drawableLeft="@drawable/password_logo"
                android:drawablePadding="8dp"/>


            <Button
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:id="@+id/sg_boton"
                android:text="@string/btn_registrarte"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/loginRedirect"
                android:text="@string/txt_redirect_inicio"
                android:layout_gravity="center"
                android:padding="8dp"
                android:textSize="18sp"
                android:textColor="@color/white"/>



        </LinearLayout>

    </LinearLayout>

</ScrollView>